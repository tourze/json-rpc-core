{
  "name": "tourze/json-rpc-core",
  "description": "JSON-RPC 2.0 Core",
  "license": "MIT",
  "require": {
    "nesbot/carbon": "^2.72 || ^3",
    "psr/log": "^3|^2|^1",
    "symfony/dependency-injection": "^7.3",
    "symfony/event-dispatcher-contracts": "^3",
    "symfony/http-foundation": "^7.4",
    "symfony/property-access": "^7.3",
    "symfony/serializer": "^7.3",
    "symfony/service-contracts": "^3.6",
    "symfony/validator": "^7.3",
    "tourze/arrayable": "1.*",
    "tourze/backtrace-helper": "1.*"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5",
    "tourze/phpunit-base": "1.*",
    "tourze/phpunit-symfony-kernel-test": "1.0.*",
    "tourze/phpunit-symfony-unit-test": "1.*"
  },
  "autoload": {
    "psr-4": {
      "Tourze\\JsonRPC\\Core\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tourze\\JsonRPC\\Core\\Tests\\": "tests"
    }
  },
  "scripts": {
    "phpstan": "cd ../.. && ./vendor/bin/phpstan analyse packages/json-rpc-core/src -c phpstan.neon",
    "test": "cd ../.. && ./vendor/bin/phpunit --configuration=phpunit.xml --testsuite=json-rpc-core"
  }
}